BORRAR	MACRO BUFFER1, CLR
	LOCAL KTERCLR1
		MOV BL, 8
		LEA SI, BUFFER1
		MOV AL, CLR
	KTERCLR1:
		MOV [SI], AL
		INC SI
		DEC BL
		CMP BL, 0
		JNE KTERCLR1
		;MOV [SI], AL
	ENDM

;                                                                          
;           CONVERSION DECIMAL-ASCII , ASCII-DECIMAL                       
;                                                                          

ITOA	MACRO BUFFER, NUMERO
	LOCAL C1
	LOCAL C2
	LOCAL C3
	LOCAL C4
		PUSH CX
		PUSH AX	;EXTRA
		BORRAR BUFFER, BLANCOS
		BORRAR BUFFERTEMP, BLANCOS
		MOV COUNT, 0
		MOV CX, 0010		;FACTOR DE DIVISION
	    LEA SI, BUFFER		;DIRECCION DE NUEVA CADENA ASCII
		MOV AX, NUMERO		;NUMERO A CONVERTIR A ASCII
		CMP AX, 0
		JNS C1				;SI NO SIGNO
		NOT AX
		INC AX
 		MOV NEGATIVO, 1
	C1:
		CMP AX, CX			;EL NUMERO ES MENOR A 10
        JB C2				; SI, ENTONCES SALIR
        XOR DX, DX			;LIMPIAR EL COCIENTE SUPERIOR
        DIV CX				;DIVIDE ENTRE 10
        OR  DL, 30H			;
        MOV [SI], DL		;ALMACENTA EL CARACTER ASCII
        INC SI
		INC COUNT
		JMP C1
    C2:
        OR AL, 30H			;ALMACENA EL ULTIMO COCIENTE
        MOV [SI], AL		; COMO CARACTER ASCII

	;EL NUMERO ESTA CONVERTIDO A ASCII PERO EN ORDEN INVERSO
	; HAY QUE VOLTEARLOS PARA ProvisionalLOS
		LEA SI, BUFFER
		LEA DI, BUFFERTEMP
		MOV BX, COUNT
		PUSH BX
	C3:
		MOV AL, [SI]
		MOV [BX+DI], AL
		INC SI
		CMP BX, 0
		DEC BX
		JG C3
		MOV AL, [SI]
		MOV [BX+DI], AL

		CMP NEGATIVO, 0
		JE	C4
		WRITE MENOS
	C4:
		POP BX
		MOV AL, BLANCOS
		MOV [BX+DI+1], AL

		POP CX
		POP AX	;EXTRA
	ENDM

ATOI	MACRO NUMERO
	LOCAL LABELX
	LOCAL LABELX1
	LOCAL NUMPOSITIVO
	LOCAL EXIT
  		PUSH AX
  		PUSH BX
  		SUB BX, BX
  		LEA SI, INTRODUCIDOS
  		MOV AL, [SI]
  		CMP AL, 2DH
  		JNE NUMPOSITIVO
  		MOV NEGATIVO, 1
  		MOV AL, 32
  		MOV [SI], AL
  	;------------------------------------
  		MOV BX, 0
		MOV BL, TOTCAR
  		MOV AL, 23H
  		MOV INTRODUCIDOS[BX],AL
  	LABELX1:
 		MOV AL, [SI+1]
  		MOV [SI],AL
  		INC SI
		DEC BL
  		CMP BL, 0
  		JNZ LABELX1
  		DEC TOTCAR
		;JMP EXIT
	;-----------------------------------
	NUMPOSITIVO:
		MOV BL, TOTCAR
  		DEC BX
  		LEA SI, INTRODUCIDOS[BX]
        MOV CX, 0
        MOV BX, 10
	    MOV CL, TOTCAR
	LABELX:
		MOV AL, [SI]
		AND AX, 00FH
		MUL MULT10
		ADD NUMERO, AX
		MOV AX, MULT10
		MUL BX
		MOV MULT10, AX
		DEC SI
		LOOP LABELX
		CMP NEGATIVO, 0
		JE EXIT
		NEG NUMERO
	EXIT:
		MOV NEGATIVO, 0
		POP BX
		POP AX
	ENDM


