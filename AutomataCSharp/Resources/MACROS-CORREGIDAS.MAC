;                                                                          
;               OPERACIONES ARITMETICAS                                    
;                                                                          
S_ASIGNAR MACRO OPERANDO1, OPERANDO2
	LOCAL LABELX
	LOCAL EXIT
		LEA SI, OPERANDO2
		LEA DI, OPERANDO1
	LABELX:
		MOV AL, [SI]
		MOV AH, [DI]
		CMP AH, AL
		JE EXIT
		MOV AL, [SI]
		MOV [DI],AL
		INC DI
		INC SI
		JMP LABELX
	EXIT:

	ENDM

CONCATENAR MACRO OPERANDO1, OPERANDO2, RESULTADO
	LOCAL LABELX
	LOCAL EXIT
	LOCAL LABELX1
	LOCAL EXIT1
		LEA SI, OPERANDO1
		LEA DI, RESULTADO
	LABELX:
		MOV AL, [SI]
		MOV AH, [DI]
		CMP AH, AL
		JE EXIT
		MOV AL, [SI]
		MOV [DI], AL
		INC DI
		INC SI
		JMP LABELX
	EXIT:
		LEA SI, OPERANDO2
	LABELX1:
		MOV AL, [SI]
		MOV AH, [DI]
		CMP AH, AL
		JE EXIT1
		MOV AL, [SI]
		MOV [DI], AL
		INC DI
		INC SI
		JMP LABELX1
	EXIT1:
	ENDM

I_ASIGNAR MACRO OPERANDO1, OPERANDO2
	 	MOV AL, OPERANDO2
		MOV OPERANDO1, AL
	ENDM

SUMAR	MACRO OPERANDO1, OPERANDO2, RESULTADO
        MOV AL, OPERANDO1
		ADD AL, OPERANDO2
		MOV RESULTADO, AL
	ENDM

RESTA	MACRO OPERANDO1, OPERANDO2, RESULTADO
		MOV AL, OPERANDO1
		SUB AL, OPERANDO2
		MOV RESULTADO, AL
	ENDM

MULTI	MACRO OPERANDO1, OPERANDO2, RESULTADO
		MOV AL, OPERANDO1
		MOV BL, OPERANDO2
		IMUL BL
		MOV RESULTADO, AL
	ENDM

DIVIDE	MACRO OPERANDO1, OPERANDO2, RESULTADO
		MOV DX, 0
		MOV AL, OPERANDO1
		MOV BL, OPERANDO2
		IDIV BL
		MOV RESULTADO, AL
	ENDM

