ARRAVAL MACRO NOMBRE, DIRECCION, VALOR
    	PUSH BX
    	PUSH AX
    	MOV BX, DIRECCION
    	MOV AX, VALOR
    	MOV NOMBRE[BX], AX
    	POP AX
    	POP BX
	ENDM

ARROVAL	MACRO NOMBRE, DIRECCION, RESULTADO
		PUSH BX
		MOV BX, DIRECCION
		MOV AX, NOMBRE[BX]
		MOV RESULTADO, AX
		POP BX
	ENDM


